<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="약속장소"
        android:layout_width="100dp"
        android:id="@+id/txt_place"
        android:layout_height="70dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="80dp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="약속시간"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:id="@+id/txt_time"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="50dp"
        android:textColor="@android:color/black" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btn_table"
        android:background="@drawable/meeting_time"
        android:layout_marginTop="77dp"
        android:layout_below="@+id/txt_time"
        android:layout_alignLeft="@+id/DateSelectButton"
        android:layout_alignStart="@+id/DateSelectButton" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btn_map"
        android:background="@drawable/meeting_place"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignTop="@+id/btn_table"
        android:layout_alignRight="@+id/DateSelectView"
        android:layout_alignEnd="@+id/DateSelectView" />

    <Button
        android:id="@+id/DateSelectButton"
        android:layout_gravity="center"
        android:background="@drawable/btn_dateselector"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="70dp" />

    <TextView
        android:id="@+id/DateSelectView"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:hint="----년 --월 --일"
        android:textColorHint="#a7a9ad"
        android:textColor="#000000"
        android:layout_width="200dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp" />

</RelativeLayout>