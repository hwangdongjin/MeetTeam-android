<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_login"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#f7f7f7"
    tools:context="com.example.inyoung.teamapp.LoginActivity"
    >

    <ImageView
        android:id="@+id/titleicon"
        android:layout_width="105dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="140dp"
        android:layout_weight="0.05"
        android:src="@drawable/mainicon" />

    <EditText
        android:id="@+id/edt_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/viewstyle"
        android:maxLines="1"
        android:textColor="#000000"
        android:inputType="textPersonName"
        android:textColorHint="#a7a9ad"
        android:hint="ID"/>

    <EditText
        android:id="@+id/edt_pw"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/viewstyle"
        android:hint="Password"
        android:textColor="#000000"
        android:textColorHint="#a7a9ad"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_login"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_basic"
            android:text="로그인"
            android:textColor="#668cff"
            android:textStyle="" />

        <Button
            android:id="@+id/btn_join"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_basic"
            android:text="회원가입"
            android:textColor="#668cff" />

    </LinearLayout>

</LinearLayout>
