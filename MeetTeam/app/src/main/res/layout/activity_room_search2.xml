<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:layout_weight="0.96">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/addUser_roomName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="35dp"
                android:text="방이름" />
            <EditText
                android:id="@+id/edt_roomName789"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:layout_alignBaseline="@+id/addUser_roomName"
                android:layout_marginLeft="20dp"
                android:ems="5"
                android:hint="방 이름을 입력하세요" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_roomPw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="25dp"
                android:text="비밀번호" />
            <EditText
                android:id="@+id/edt_roomSubject789"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:layout_alignBaseline="@+id/tv_roomPw"
                android:layout_marginLeft="20dp"
                android:ems="5"
                android:hint="비밀번호를 입력하세요" />
        </LinearLayout>

        <Button
            android:text="방찾기"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_roomSearch789" />

        <Button
            android:text="취소"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_roomCancel" />
    </LinearLayout>
</LinearLayout>