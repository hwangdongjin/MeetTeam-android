<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.inyoung.teamapp.fragment.ListroomFragment3">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="60dp"
            android:src="@drawable/sample_user"/>

        <Button
            android:id="@+id/profile_button"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/modify_profile"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/logout_button"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/log_out"
            android:layout_below="@+id/profile_button"
            android:layout_alignLeft="@+id/profile_button"
            android:layout_alignStart="@+id/profile_button"
            android:layout_marginTop="30dp"/>


    </LinearLayout>
</RelativeLayout>
