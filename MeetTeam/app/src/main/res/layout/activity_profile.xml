<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal|center_vertical"
    tools:context="com.example.inyoung.teamapp.ProfileActivity"
    android:weightSum="1">

    <ImageView
        android:id="@+id/profile_image2"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@drawable/sample_user"
        android:layout_weight="0.30"/>


    <EditText
        android:id="@+id/profile_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/viewstyle"
        android:hint="이름"
        android:maxLines="1"
        android:textColor="#000000"
        android:textColorHint="#a7a9ad"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/profile_email"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/viewstyle"
        android:hint="이메일"
        android:maxLines="1"
        android:textColor="#000000"
        android:textColorHint="#a7a9ad"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/profile_PhoneNum"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/viewstyle"
        android:hint="전화번호"
        android:maxLines="1"
        android:textColor="#000000"
        android:textColorHint="#a7a9ad"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/profile_pw"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/viewstyle"
        android:hint="비밀번호"
        android:maxLines="1"
        android:textColor="#000000"
        android:textColorHint="#a7a9ad"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/profile_pwc"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/viewstyle"
        android:hint="비밀번호 확인"
        android:maxLines="1"
        android:textColor="#000000"
        android:textColorHint="#a7a9ad"
        android:textSize="15dp" />



    <Button
        android:id="@+id/profile_change"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="변경하기"
        android:background="@drawable/btn_yellow" />

</LinearLayout>
